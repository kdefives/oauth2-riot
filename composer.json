{
    "name": "kdefives/oauth2-riot",
    "description": "Riot (RSO) OAuth 2.0 support for the PHP League's OAuth 2.0 Client",
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authentication",
        "rso",
        "riot"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Defives",
            "email": "kevin.defives@gmail.com",
            "homepage": "https://github.com/kdefives",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "league/oauth2-client": "^2.0"
    },
    "require-dev": {
        "eloquent/phony-phpunit": "^2.0",
        "phpunit/phpunit": "^6.0",
        "php-coveralls/php-coveralls": "^2.1",
        "squizlabs/php_codesniffer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "League\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "League\\OAuth2\\Client\\Test\\": "test/src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check": "phpcs src --standard=psr2 -sp"
    }
}
